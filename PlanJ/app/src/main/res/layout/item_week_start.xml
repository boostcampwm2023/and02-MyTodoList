<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/vw_weekstart_bar"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_margin="2dp"
        android:background="@color/green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_weekstart_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="가가가각가가가"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@id/vw_weekstart_bar"
        app:layout_constraintStart_toStartOf="@id/vw_weekstart_bar"
        app:layout_constraintTop_toBottomOf="@id/vw_weekstart_bar" />

    <View
        android:id="@+id/vw_weekstart_endline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="@id/vw_weekstart_bar"
        app:layout_constraintStart_toStartOf="@id/vw_weekstart_bar"
        app:layout_constraintTop_toBottomOf="@+id/tv_weekstart_title" />

</androidx.constraintlayout.widget.ConstraintLayout>